---
import { getHostedMediaUrl } from "../lib/b2Media";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
}

const { src, alt, width, height, class: className, ...rest } = Astro.props;
const imageUrl = getHostedMediaUrl(src);
---

<img 
  src={imageUrl} 
  alt={alt} 
  width={width} 
  height={height} 
  class={className}
  {...rest}
/>
