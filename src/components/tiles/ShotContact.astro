---
import type { Fragment } from '../../lib/types';
import { blobUrl, DID } from '../../lib/atproto';

interface Props {
  fragment: Fragment;
  cls?: string;
}

const { fragment: f, cls = '' } = Astro.props;
---

<a
  href={`/f/${f.id}`}
  class:list={['tile', 'tile-shot', 'shot-contact', cls]}
  data-type="shot"
>
  <img
    src={blobUrl(DID, f.images![0].cid)}
    alt={f.title}
    loading="lazy"
  />
  <span class="shot-frame">{String(f.id).padStart(2, '0')}A</span>
</a>
