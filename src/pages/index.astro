---
import FragmentList from "../components/fragment-list.astro";
import BaseLayout from "../layouts/base-layout.astro";
---

<BaseLayout title="nate.rip"
    ><div class="h-96 md:h-full w-full">
        <div
            class="w-64 flex flex-col items-center justify-center h-full mx-auto"
        >
