---
import Base from "../layouts/Base.astro";
---

<Base wide>
  <style>
    .demo-catalog {
      display: flex;
      flex-direction: column;
      gap: var(--sp-2);
      padding: var(--sp-3);
    }
    .demo-section {
      padding: var(--sp-4) 0 var(--sp);
      border-bottom: 1px solid var(--border);
    }
    .demo-section:first-child { padding-top: 0; }
    .demo-section h2 {
      font-size: var(--fs-l);
      color: var(--fg);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }
    .demo-row {
      display: flex;
      gap: var(--sp-2);
      height: 180px;
    }
    .demo-label {
      width: 100px;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      font-family: var(--mono);
      font-size: var(--fs-s);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: var(--fg-2);
    }
    .demo-label.accent { color: var(--accent); }
    .demo-label.shot { color: var(--accent-2); }
    .demo-label.bsky { color: #1185fe; }
    .demo-label.link { color: var(--link-accent); }

    /* Tile sizing within rows */
    .demo-row > .tile,
    .demo-row > [class*="p7-"],
    .demo-row > [class*="p8-"],
    .demo-row > [class*="bx-"],
    .demo-row > [class*="lC-"],
    .demo-row > [class*="lD-"],
    .demo-row > [class*="lE-"] {
      flex: 1;
      min-width: 0;
    }
    .s2 { flex: 2 !important; }
    .s3 { flex: 3 !important; }

    /* Placeholder image for shots */
    .shot-placeholder {
      width: 100%; height: 100%;
      background: linear-gradient(135deg, var(--surface), var(--surface-2));
    }

    /* ========================================
       Exploration-only styles (not in production theme.css)
       ======================================== */

    /* --- Departure Board (p7) --- */
    .p7-board {
      position: relative; overflow: hidden;
      background: #111318; padding: 0;
      display: flex; flex-direction: column;
      border: 2px solid #2a2d35; clip-path: none; border-radius: 3px;
    }
    .p7-row {
      display: flex; align-items: center;
      border-bottom: 1px solid #1e2028; flex-shrink: 0;
    }
    .p7-row-head {
      background: #1a1d25; border-bottom: 2px solid #2a2d35;
    }
    .p7-row-head .p7-col {
      font-size: 9px; color: #4a5068; letter-spacing: 0.15em; padding: 5px 8px;
    }
    .p7-row-active .p7-col-dest { color: var(--accent); }
    .p7-row-dim { opacity: 0.4; }
    .p7-col {
      font-family: var(--mono); font-size: var(--fs); font-weight: 600;
      text-transform: uppercase; letter-spacing: 0.06em; color: var(--fg);
      padding: 8px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
      background: linear-gradient(180deg, transparent 48%, rgba(0,0,0,0.15) 48%, rgba(0,0,0,0.15) 52%, transparent 52%);
    }
    .p7-col-id { width: 36px; flex-shrink: 0; text-align: center; color: var(--fg-2); border-right: 1px solid #1e2028; }
    .p7-col-dest { flex: 1; min-width: 0; }
    .p7-col-time { width: 52px; flex-shrink: 0; text-align: right; color: var(--fg-2); border-left: 1px solid #1e2028; }
    .p7-col-status { width: 48px; flex-shrink: 0; text-align: center; font-size: var(--fs-s); color: var(--fg-2); border-left: 1px solid #1e2028; }
    .p7-live { color: var(--accent); }
    .p7-board::after {
      content: ''; position: absolute; top: 0; left: 10%; right: 10%; height: 1px;
      background: linear-gradient(90deg, transparent, color-mix(in oklch, var(--accent) 30%, transparent) 30%, color-mix(in oklch, var(--accent) 50%, transparent) 50%, color-mix(in oklch, var(--accent) 30%, transparent) 70%, transparent);
      z-index: 1;
    }

    /* --- Cassette+Slab (p8, big title variant) --- */
    .p8-casslab {
      position: relative; overflow: hidden;
      background: var(--surface-2); border: 1px solid var(--border);
      clip-path: polygon(4px 0, calc(100% - 4px) 0, calc(100% - 2px) 6px, 100% 6px, 100% 88%, calc(100% - 6px) 88%, calc(100% - 6px) 92%, 100% 92%, 100% calc(100% - 3px), calc(100% - 3px) 100%, 3px 100%, 0 calc(100% - 3px), 0 92%, 6px 92%, 6px 88%, 0 88%, 0 6px, 2px 6px);
      padding: 0; display: flex; flex-direction: column;
      background-image: repeating-linear-gradient(0deg, transparent, transparent 3px, rgba(255,255,255,0.008) 3px, rgba(255,255,255,0.008) 4px);
    }
    .p8-catalog { position: absolute; top: 12px; right: 16px; font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); opacity: 0.5; z-index: 2; }
    .p8-label { margin: 8px 10px 0; border: 1px solid var(--border); background: color-mix(in oklch, var(--surface) 50%, var(--bg)); padding: var(--sp-2) var(--sp-3); flex: 1; display: flex; flex-direction: column; justify-content: flex-end; gap: var(--sp); overflow: hidden; }
    .p8-big { font-family: var(--font); font-size: clamp(24px, 5cqi, 48px); font-weight: 800; line-height: 0.9; letter-spacing: -0.02em; text-transform: uppercase; color: var(--fg); overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical; }
    .s2 .p8-big { font-size: clamp(28px, 6cqi, 56px); -webkit-line-clamp: 3; }
    .p8-footer { display: flex; justify-content: space-between; align-items: baseline; padding: var(--sp) 10px; }
    .p8-type { font-family: var(--mono); font-size: var(--fs-s); text-transform: uppercase; letter-spacing: 0.08em; color: var(--accent); }
    .p8-date { font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); }
    .p8-edge { height: 20px; flex-shrink: 0; position: relative; border-top: 1px solid color-mix(in oklch, var(--accent) 35%, var(--border)); background: repeating-linear-gradient(0deg, transparent, transparent 19px, color-mix(in oklch, var(--accent) 8%, transparent) 19px, color-mix(in oklch, var(--accent) 8%, transparent) 20px), repeating-linear-gradient(90deg, transparent, transparent 19px, color-mix(in oklch, var(--accent) 8%, transparent) 19px, color-mix(in oklch, var(--accent) 8%, transparent) 20px), color-mix(in oklch, var(--accent) 3%, var(--bg)); }

    /* --- Signal Ping Hybrid (bx, exploration) --- */
    .bx-hybrid {
      position: relative; overflow: hidden; background: var(--surface-2);
      clip-path: polygon(4px 0, 4px 4px, 0 4px, 0 100%, calc(100% - 14px) 100%, 100% 50%, calc(100% - 14px) 0);
      padding: 0; display: flex; flex-direction: column;
      border-left: 1px dashed color-mix(in oklch, #1185fe 30%, var(--border));
      border-top: 1px solid color-mix(in oklch, #1185fe 30%, var(--border));
      border-bottom: 1px solid color-mix(in oklch, #1185fe 30%, var(--border));
    }
    .bx-hybrid::before {
      content: ''; position: absolute; inset: 0;
      background: radial-gradient(circle at 92% 50%, transparent 18px, color-mix(in oklch, #1185fe 22%, transparent) 19px, color-mix(in oklch, #1185fe 22%, transparent) 21px, transparent 22px, transparent 38px, color-mix(in oklch, #1185fe 15%, transparent) 39px, color-mix(in oklch, #1185fe 15%, transparent) 41px, transparent 42px, transparent 58px, color-mix(in oklch, #1185fe 10%, transparent) 59px, color-mix(in oklch, #1185fe 10%, transparent) 61px, transparent 62px);
      pointer-events: none; z-index: 1;
    }
    .bx-header { display: flex; padding: var(--sp) var(--sp-2); padding-left: calc(var(--sp-2) + 4px); gap: var(--sp-2); background: color-mix(in oklch, #1185fe 4%, var(--surface)); border-bottom: 1px solid color-mix(in oklch, #1185fe 15%, var(--border)); flex-shrink: 0; font-family: var(--mono); font-size: var(--fs-s); position: relative; z-index: 2; }
    .bx-field { color: var(--fg-2); border-right: 1px solid color-mix(in oklch, #1185fe 15%, var(--border)); padding-right: var(--sp-2); }
    .bx-field:last-child { border-right: none; padding-right: 20px; }
    .bx-field em { color: #1185fe; font-style: normal; }
    .bx-body { flex: 1; padding: var(--sp-2) var(--sp-3); padding-right: 24px; display: flex; flex-direction: column; gap: var(--sp); position: relative; z-index: 2; font-size: var(--fs-s); line-height: var(--lh); color: var(--fg); }
    .bx-footer { display: flex; align-items: center; justify-content: space-between; padding: var(--sp) var(--sp-2); padding-right: 24px; background: color-mix(in oklch, #1185fe 3%, var(--surface)); border-top: 1px solid color-mix(in oklch, #1185fe 12%, var(--border)); font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); flex-shrink: 0; position: relative; z-index: 2; }
    .bx-bars { display: flex; gap: 2px; align-items: flex-end; }
    .bx-bars i { display: block; width: 3px; background: #1185fe; }
    .bx-bars i:nth-child(1) { height: 4px; opacity: 0.4; }
    .bx-bars i:nth-child(2) { height: 7px; opacity: 0.6; }
    .bx-bars i:nth-child(3) { height: 10px; opacity: 0.9; }

    /* --- Link exploration variants (C, D, E) --- */
    .lC-intercept { position: relative; overflow: hidden; background: var(--bg); padding: 0; display: flex; flex-direction: column; color: var(--fg); clip-path: polygon(0 6px, 4% 2px, 8% 7px, 13% 3px, 18% 6px, 23% 1px, 28% 5px, 33% 2px, 38% 7px, 43% 3px, 48% 6px, 53% 1px, 58% 5px, 63% 2px, 68% 6px, 73% 3px, 78% 7px, 83% 2px, 88% 5px, 93% 1px, 97% 6px, 100% 3px, 100% 100%, calc(100% - 10px) 100%, calc(100% - 10px) calc(100% - 10px), 0 calc(100% - 10px)); border: 1px solid color-mix(in oklch, var(--link-accent) 35%, var(--border)); }
    .lC-intercept::before { content: ''; position: absolute; inset: 0; background: repeating-linear-gradient(0deg, transparent, transparent 22px, color-mix(in oklch, var(--link-accent) 6%, transparent) 22px, color-mix(in oklch, var(--link-accent) 6%, transparent) 23px); pointer-events: none; z-index: 1; }
    .lC-stamp { position: absolute; top: 14px; right: 12px; font-family: var(--mono); font-size: 9px; font-weight: 700; text-transform: uppercase; letter-spacing: 0.2em; color: var(--link-accent); opacity: 0.25; transform: rotate(4deg); border: 1px solid color-mix(in oklch, var(--link-accent) 20%, transparent); padding: 1px 6px; z-index: 2; }
    .lC-head { display: flex; align-items: baseline; gap: var(--sp-2); padding: 12px var(--sp-3) var(--sp); flex-shrink: 0; position: relative; z-index: 2; }
    .lC-arrow { color: var(--link-accent); font-weight: 700; }
    .lC-domain, .lD-domain, .lE-domain { font-family: var(--mono); font-size: var(--fs-s); color: var(--link-accent); opacity: 0.8; }
    .lC-date, .lD-date { margin-left: auto; font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); }
    .lC-body { flex: 1; padding: 0 var(--sp-3) var(--sp-3); display: flex; flex-direction: column; gap: var(--sp); position: relative; z-index: 2; }
    .lC-body h3, .lD-content h3, .lE-body h3 { font-size: var(--fs); font-weight: 600; text-transform: none; letter-spacing: 0; line-height: var(--lh); color: var(--fg); }

    .lD-beacon { position: relative; overflow: hidden; background: var(--bg); padding: 0; display: flex; color: var(--fg); clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 50%, calc(100% - 20px) 100%, 0 100%); border: 1px solid color-mix(in oklch, var(--link-accent) 35%, var(--border)); }
    .lD-beacon::before { content: ''; position: absolute; inset: 0; background: radial-gradient(circle at 95% 50%, transparent 12px, color-mix(in oklch, var(--link-accent) 15%, transparent) 13px, color-mix(in oklch, var(--link-accent) 15%, transparent) 15px, transparent 16px, transparent 30px, color-mix(in oklch, var(--link-accent) 10%, transparent) 31px, color-mix(in oklch, var(--link-accent) 10%, transparent) 33px, transparent 34px, transparent 50px, color-mix(in oklch, var(--link-accent) 6%, transparent) 51px, color-mix(in oklch, var(--link-accent) 6%, transparent) 53px, transparent 54px); pointer-events: none; z-index: 1; }
    .lD-side { width: 3px; flex-shrink: 0; background: linear-gradient(180deg, var(--link-accent), color-mix(in oklch, var(--link-accent) 20%, transparent)); }
    .lD-content { flex: 1; padding: var(--sp-2) var(--sp-3); padding-right: 28px; display: flex; flex-direction: column; gap: var(--sp); position: relative; z-index: 2; }
    .lD-tag { font-family: var(--mono); font-size: var(--fs-s); text-transform: uppercase; letter-spacing: 0.12em; color: var(--link-accent); }
    .lD-meta { display: flex; gap: var(--sp-2); align-items: baseline; margin-top: auto; }

    .lE-uplink { position: relative; overflow: hidden; background: var(--bg); padding: 0; display: flex; flex-direction: column; color: var(--fg); clip-path: polygon(36px 0, 100% 0, 100% 100%, 0 100%, 0 28px); border: 1px solid color-mix(in oklch, var(--link-accent) 35%, var(--border)); }
    .lE-uplink::before { content: ''; position: absolute; inset: 0; background: linear-gradient(135deg, transparent 18px, color-mix(in oklch, var(--link-accent) 10%, transparent) 18.5px, color-mix(in oklch, var(--link-accent) 10%, transparent) 19px, transparent 19.5px), linear-gradient(135deg, transparent 28px, color-mix(in oklch, var(--link-accent) 6%, transparent) 28.5px, color-mix(in oklch, var(--link-accent) 6%, transparent) 29px, transparent 29.5px); pointer-events: none; z-index: 1; }
    .lE-freq { display: flex; align-items: center; gap: var(--sp-2); padding: var(--sp) var(--sp-3); padding-left: 44px; background: color-mix(in oklch, var(--link-accent) 5%, var(--surface-2)); border-bottom: 1px solid color-mix(in oklch, var(--link-accent) 18%, var(--border)); flex-shrink: 0; position: relative; z-index: 2; }
    .lE-arrow { color: var(--link-accent); font-weight: 700; }
    .lE-label { font-family: var(--mono); font-size: var(--fs-s); text-transform: uppercase; letter-spacing: 0.1em; color: var(--link-accent); }
    .lE-bars { margin-left: auto; display: flex; gap: 2px; align-items: flex-end; }
    .lE-bars i { display: block; width: 3px; background: var(--link-accent); }
    .lE-bars i:nth-child(1) { height: 4px; opacity: 0.3; }
    .lE-bars i:nth-child(2) { height: 6px; opacity: 0.5; }
    .lE-bars i:nth-child(3) { height: 8px; opacity: 0.7; }
    .lE-bars i:nth-child(4) { height: 10px; }
    .lE-body { flex: 1; padding: var(--sp-2) var(--sp-3); display: flex; flex-direction: column; gap: var(--sp); position: relative; z-index: 2; }
    .lE-foot { display: flex; align-items: baseline; justify-content: space-between; padding: var(--sp) var(--sp-3); background: color-mix(in oklch, var(--link-accent) 3%, var(--surface-2)); border-top: 1px solid color-mix(in oklch, var(--link-accent) 12%, var(--border)); font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); flex-shrink: 0; position: relative; z-index: 2; }

    @media (max-width: 700px) {
      .demo-row { height: 140px; }
      .demo-label { width: 70px; font-size: 9px; }
    }
  </style>

