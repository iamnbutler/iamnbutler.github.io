---
import Base from "../layouts/Base.astro";
---

<Base wide>
  <style>
    .demo-catalog {
      display: flex;
      flex-direction: column;
      gap: var(--sp-2);
      padding: var(--sp-3);
    }
    .demo-section {
      padding: var(--sp-4) 0 var(--sp);
      border-bottom: 1px solid var(--border);
    }
    .demo-section:first-child { padding-top: 0; }
    .demo-section h2 {
      font-size: var(--fs-l);
      color: var(--fg);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }
    .demo-row {
      display: flex;
      gap: var(--sp-2);
      height: 180px;
    }
    .demo-row.tall { height: 320px; }
    .demo-label {
      width: 100px;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      font-family: var(--mono);
      font-size: var(--fs-s);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: var(--fg-2);
    }
    .demo-label.accent { color: var(--accent); }
    .demo-label.shot { color: var(--accent-2); }
    .demo-label.bsky { color: #1185fe; }
    .demo-label.link { color: var(--link-accent); }
    .demo-label.meta { color: var(--fg-2); }

    /* Tile sizing within rows */
    .demo-row > .tile,
    .demo-row > [class^="x-"],
    .demo-row > [class*="p7-"],
    .demo-row > [class*="p8-"],
    .demo-row > [class*="lC-"],
    .demo-row > [class*="lD-"],
    .demo-row > [class*="lE-"] {
      flex: 1;
      min-width: 0;
    }
    .s2 { flex: 2 !important; }
    .s3 { flex: 3 !important; }

    /* Placeholder image for shots */
    .shot-placeholder {
      width: 100%; height: 100%;
      background: linear-gradient(135deg, var(--surface), var(--surface-2));
    }

    /* ========================================
       Exploration-only styles
       ======================================== */

    /* --- Departure Board (p7) --- */
    .p7-board {
      position: relative; overflow: hidden;
      background: #111318; padding: 0;
      display: flex; flex-direction: column;
      border: 2px solid #2a2d35; clip-path: none; border-radius: 3px;
    }
    .p7-row {
      display: flex; align-items: center;
      border-bottom: 1px solid #1e2028; flex-shrink: 0;
    }
    .p7-row-head {
      background: #1a1d25; border-bottom: 2px solid #2a2d35;
    }
    .p7-row-head .p7-col {
      font-size: 9px; color: #4a5068; letter-spacing: 0.15em; padding: 5px 8px;
    }
    .p7-row-active .p7-col-dest { color: var(--accent); }
    .p7-row-dim { opacity: 0.4; }
    .p7-col {
      font-family: var(--mono); font-size: var(--fs); font-weight: 600;
      text-transform: uppercase; letter-spacing: 0.06em; color: var(--fg);
      padding: 8px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
      background: linear-gradient(180deg, transparent 48%, rgba(0,0,0,0.15) 48%, rgba(0,0,0,0.15) 52%, transparent 52%);
    }
    .p7-col-id { width: 36px; flex-shrink: 0; text-align: center; color: var(--fg-2); border-right: 1px solid #1e2028; }
    .p7-col-dest { flex: 1; min-width: 0; }
    .p7-col-time { width: 52px; flex-shrink: 0; text-align: right; color: var(--fg-2); border-left: 1px solid #1e2028; }
    .p7-col-status { width: 48px; flex-shrink: 0; text-align: center; font-size: var(--fs-s); color: var(--fg-2); border-left: 1px solid #1e2028; }
    .p7-live { color: var(--accent); }

    /* --- Cassette+Slab (p8, big title variant) --- */
    .p8-casslab {
      position: relative; overflow: hidden;
      background: var(--surface-2); border: 1px solid var(--border);
      clip-path: polygon(4px 0, calc(100% - 4px) 0, calc(100% - 2px) 6px, 100% 6px, 100% 88%, calc(100% - 6px) 88%, calc(100% - 6px) 92%, 100% 92%, 100% calc(100% - 3px), calc(100% - 3px) 100%, 3px 100%, 0 calc(100% - 3px), 0 92%, 6px 92%, 6px 88%, 0 88%, 0 6px, 2px 6px);
      padding: 0; display: flex; flex-direction: column;
      background-image: repeating-linear-gradient(0deg, transparent, transparent 3px, rgba(255,255,255,0.008) 3px, rgba(255,255,255,0.008) 4px);
    }
    .p8-catalog { position: absolute; top: 12px; right: 16px; font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); opacity: 0.5; z-index: 2; }
    .p8-label { margin: 8px 10px 0; border: 1px solid var(--border); background: color-mix(in oklch, var(--surface) 50%, var(--bg)); padding: var(--sp-2) var(--sp-3); flex: 1; display: flex; flex-direction: column; justify-content: flex-end; gap: var(--sp); overflow: hidden; }
    .p8-big { font-family: var(--font); font-size: clamp(24px, 5cqi, 48px); font-weight: 800; line-height: 0.9; letter-spacing: -0.02em; text-transform: uppercase; color: var(--fg); overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical; }
    .s2 .p8-big { font-size: clamp(28px, 6cqi, 56px); -webkit-line-clamp: 3; }
    .p8-footer { display: flex; justify-content: space-between; align-items: baseline; padding: var(--sp) 10px; }
    .p8-type { font-family: var(--mono); font-size: var(--fs-s); text-transform: uppercase; letter-spacing: 0.08em; color: var(--accent); }
    .p8-date { font-family: var(--mono); font-size: var(--fs-s); color: var(--fg-2); }
    .p8-edge { height: 20px; flex-shrink: 0; position: relative; border-top: 1px solid color-mix(in oklch, var(--accent) 35%, var(--border)); background: repeating-linear-gradient(0deg, transparent, transparent 19px, color-mix(in oklch, var(--accent) 8%, transparent) 19px, color-mix(in oklch, var(--accent) 8%, transparent) 20px), repeating-linear-gradient(90deg, transparent, transparent 19px, color-mix(in oklch, var(--accent) 8%, transparent) 19px, color-mix(in oklch, var(--accent) 8%, transparent) 20px), color-mix(in oklch, var(--accent) 3%, var(--bg)); }

    /* --- NEW: Microfiche (post) --- */
    .x-fiche {
      position: relative; overflow: hidden;
      background: #0a0c10;
      border: 1px solid #1a1e28;
      display: flex; flex-direction: column;
    }
    .x-fiche::before {
      content: '';
      position: absolute; top: 0; left: 0; right: 0; height: 3px;
      background: repeating-linear-gradient(90deg, #2a3040 0px, #2a3040 6px, transparent 6px, transparent 10px);
      z-index: 2;
    }
    .x-fiche-carrier {
      display: flex; justify-content: space-between; align-items: center;
      padding: 8px var(--sp-2); padding-top: 10px;
      background: #0d1018;
      border-bottom: 1px solid #1a1e28;
      flex-shrink: 0;
    }
    .x-fiche-ref {
      font-family: var(--mono); font-size: 9px;
      color: #4a5570; letter-spacing: 0.15em;
      text-transform: uppercase;
    }
    .x-fiche-body {
      flex: 1; padding: var(--sp-3);
      display: flex; flex-direction: column;
      justify-content: center; gap: var(--sp);
    }
    .x-fiche-body h3 {
      font-size: var(--fs-l); font-weight: 700;
      color: #c8d4e8;
      text-shadow: 0 0 12px rgba(200, 212, 232, 0.15);
    }
    .x-fiche-body p {
      font-size: var(--fs-s); color: #5a6a80;
      line-height: var(--lh);
    }
    .x-fiche-body time {
      font-family: var(--mono); font-size: var(--fs-s);
      color: #3a4a60;
    }
    .x-fiche::after {
      content: '';
      position: absolute; top: 40%; left: 0; right: 0; height: 1px;
      background: linear-gradient(90deg, transparent, rgba(200,212,232,0.06) 20%, rgba(200,212,232,0.06) 80%, transparent);
      pointer-events: none;
    }

    /* --- NEW: Broadsheet (post) --- */
    .x-broadsheet {
      position: relative; overflow: hidden;
      background: var(--surface);
      border: 1px solid var(--border);
      display: flex; flex-direction: column;
    }
    .x-broadsheet-dateline {
      display: flex; justify-content: space-between; align-items: baseline;
      padding: var(--sp) var(--sp-3);
      border-bottom: 2px solid var(--fg);
      flex-shrink: 0;
    }
    .x-broadsheet-dateline span {
      font-family: var(--mono); font-size: 9px;
      text-transform: uppercase; letter-spacing: 0.15em;
      color: var(--fg-2);
    }
    .x-broadsheet-body {
      flex: 1; padding: var(--sp-2) var(--sp-3);
      display: flex; flex-direction: column;
      justify-content: center; gap: var(--sp);
    }
    .x-broadsheet-body h3 {
      font-size: var(--fs-l); font-weight: 800;
      line-height: 1.1; color: var(--fg);
      letter-spacing: -0.01em;
    }
    .x-broadsheet-body p {
      font-size: var(--fs-s); color: var(--fg-2);
      line-height: var(--lh);
    }
    .x-broadsheet::after {
      content: '';
      position: absolute; bottom: 0; left: 0; right: 0; height: 3px;
      background: var(--fg);
    }
    /* Column rule for wider variants */
    .s2 .x-broadsheet-body {
      border-right: 1px solid color-mix(in oklch, var(--fg) 12%, transparent);
      margin-right: 30%;
      padding-right: var(--sp-3);
    }

    /* --- NEW: Polaroid (shot) --- */
    .x-polaroid {
      position: relative; overflow: hidden;
      background: #e8e4de;
      padding: 6px 6px 32px 6px;
      display: flex; flex-direction: column;
    }
    .x-polaroid .shot-placeholder {
      flex: 1; border-radius: 0;
      background: linear-gradient(135deg, #1a1e28, #2a2e38);
    }
    .x-polaroid-caption {
      position: absolute; bottom: 6px; left: 10px; right: 10px;
      font-family: var(--mono); font-size: var(--fs-s);
      color: #3a3632;
      display: flex; justify-content: space-between;
      line-height: 22px;
    }

    /* --- NEW: Slide Mount (shot) --- */
    .x-slide {
      position: relative; overflow: hidden;
      background: var(--surface-2);
      border: 1px solid var(--border);
      padding: 18px;
      display: flex; flex-direction: column;
    }
    .x-slide::before {
      content: '';
      position: absolute; top: -6px; left: calc(50% - 10px);
      width: 20px; height: 12px;
      background: var(--bg);
      border-radius: 0 0 10px 10px;
      border: 1px solid var(--border);
      border-top: none;
      z-index: 2;
    }
    .x-slide .shot-placeholder {
      flex: 1; border-radius: 0;
    }
    .x-slide-meta {
      display: flex; justify-content: space-between;
      padding-top: 4px;
      font-family: var(--mono); font-size: 9px;
      color: var(--fg-2); letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    /* --- NEW: Proof (shot) --- */
    .x-proof {
      position: relative; overflow: hidden;
      background: #f5f3ef;
      padding: 12px;
      display: flex; flex-direction: column;
    }
    .x-proof .shot-placeholder {
      flex: 1;
      background: linear-gradient(135deg, #1a1e28, #2a2e38);
    }
    /* crop marks — four L-shapes at corners */
    .x-proof::before,
    .x-proof::after {
      content: '';
      position: absolute;
      width: 14px; height: 14px;
      border-color: #888;
      border-style: solid;
      border-width: 0;
      z-index: 2;
    }
    .x-proof::before {
      top: 4px; left: 4px;
      border-top-width: 1px; border-left-width: 1px;
    }
    .x-proof::after {
      top: 4px; right: 4px;
      border-top-width: 1px; border-right-width: 1px;
    }
    .x-proof-bl, .x-proof-br {
      position: absolute;
      width: 14px; height: 14px;
      border-color: #888;
      border-style: solid;
      border-width: 0;
      z-index: 2;
    }
    .x-proof-bl { bottom: 4px; left: 4px; border-bottom-width: 1px; border-left-width: 1px; }
    .x-proof-br { bottom: 4px; right: 4px; border-bottom-width: 1px; border-right-width: 1px; }
    .x-proof-stamp {
      position: absolute; bottom: 14px; right: 16px;
      font-family: var(--mono); font-size: var(--fs-s);
      font-weight: 700; color: #c44;
      transform: rotate(-8deg);
      z-index: 3;
    }

    /* --- NEW: Contact Sheet (multi-shot) --- */
    .x-contact {
      position: relative; overflow: hidden;
      background: #111;
      border: 1px solid #2a2a2a;
      padding: 6px;
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 3px;
    }
    .x-contact-frame {
      position: relative;
      background: linear-gradient(135deg, #1a1e28, #2a2e38);
      overflow: hidden;
    }
    .x-contact-frame::after {
      content: attr(data-n);
      position: absolute; bottom: 1px; right: 3px;
      font-family: var(--mono); font-size: 8px;
      color: rgba(255,200,100,0.5);
    }

    /* --- NEW: Filmstrip (multi-shot) --- */
    .x-filmstrip {
      position: relative; overflow: hidden;
      background: #111;
      padding: 14px 4px;
      display: flex; gap: 3px;
    }
    .x-filmstrip::before,
    .x-filmstrip::after {
      content: '';
      position: absolute; left: 0; right: 0; height: 10px;
      background: repeating-linear-gradient(90deg,
        transparent 0px, transparent 8px,
        #222 8px, #222 10px,
        transparent 10px, transparent 16px,
        #222 16px, #222 18px,
        transparent 18px, transparent 24px
      );
      z-index: 2;
    }
    .x-filmstrip::before { top: 0; }
    .x-filmstrip::after { bottom: 0; }
    .x-filmstrip-frame {
      flex: 1; min-width: 0;
      background: linear-gradient(135deg, #1a1e28, #2a2e38);
      position: relative;
    }
    .x-filmstrip-n {
      position: absolute; bottom: 2px; left: 4px;
      font-family: var(--mono); font-size: 8px;
      color: rgba(255,200,100,0.4);
    }

    /* --- NEW: Gram (bsky) — telegram / cablegram --- */
    .x-gram {
      position: relative; overflow: hidden;
      background: var(--surface);
      border: 2px double var(--border);
      display: flex; flex-direction: column;
      padding: 0;
    }
    .x-gram-header {
      padding: var(--sp) var(--sp-2);
      border-bottom: 2px double var(--border);
      display: flex; gap: var(--sp-3);
      font-family: var(--mono); font-size: 9px;
      text-transform: uppercase; letter-spacing: 0.12em;
      color: var(--fg-2);
      flex-shrink: 0;
    }
    .x-gram-header em { color: #1185fe; font-style: normal; }
    .x-gram-body {
      flex: 1; padding: var(--sp-2) var(--sp-3);
      font-family: var(--mono); font-size: var(--fs-s);
      text-transform: uppercase; letter-spacing: 0.04em;
      line-height: 1.6; color: var(--fg);
    }
    .x-gram-footer {
      padding: var(--sp) var(--sp-2);
      border-top: 2px double var(--border);
      font-family: var(--mono); font-size: 9px;
      color: var(--fg-2); letter-spacing: 0.1em;
      text-transform: uppercase;
      display: flex; justify-content: space-between;
      flex-shrink: 0;
    }

    /* --- NEW: Sticky (bsky) — post-it note --- */
    .x-sticky {
      position: relative; overflow: hidden;
      background: color-mix(in oklch, #e8c840 12%, var(--surface));
      border: none;
      transform: rotate(-0.8deg);
      box-shadow: 2px 3px 8px rgba(0,0,0,0.15);
      padding: var(--sp-3);
      display: flex; flex-direction: column;
      gap: var(--sp);
    }
    .x-sticky::before {
      content: '';
      position: absolute; top: 0; right: 0;
      width: 20px; height: 20px;
      background: linear-gradient(225deg, var(--bg) 50%, color-mix(in oklch, #e8c840 8%, var(--surface-2)) 50%);
      z-index: 2;
    }
    .x-sticky p {
      font-size: var(--fs); line-height: var(--lh);
      color: var(--fg);
    }
    .x-sticky-meta {
      margin-top: auto;
      font-family: var(--mono); font-size: var(--fs-s);
      color: var(--fg-2);
    }

    /* --- NEW: Wire (bsky) — news wire bulletin --- */
    .x-wire {
      position: relative; overflow: hidden;
      background: var(--surface);
      border: 1px solid var(--border);
      display: flex; flex-direction: column;
    }
    .x-wire-header {
      background: #1185fe;
      color: var(--bg);
      padding: 4px var(--sp-2);
      font-family: var(--mono); font-size: 9px;
      font-weight: 700; letter-spacing: 0.2em;
      text-transform: uppercase;
      flex-shrink: 0;
    }
    .x-wire-dateline {
      padding: var(--sp) var(--sp-2);
      border-bottom: 1px solid var(--border);
      font-family: var(--mono); font-size: 9px;
      color: var(--fg-2); text-transform: uppercase;
      letter-spacing: 0.1em;
      flex-shrink: 0;
    }
    .x-wire-body {
      flex: 1; padding: var(--sp-2) var(--sp-3);
      font-size: var(--fs-s); line-height: var(--lh);
      color: var(--fg);
    }
    .x-wire-stats {
      padding: var(--sp) var(--sp-2);
      border-top: 1px solid var(--border);
      font-family: var(--mono); font-size: 9px;
      color: var(--fg-2);
      display: flex; gap: var(--sp-3);
      flex-shrink: 0;
    }

    /* --- NEW: Index Card (list) --- */
    .x-index {
      position: relative; overflow: hidden;
      background: #f5f0e6;
      border: 1px solid #d4cbb8;
      display: flex; flex-direction: column;
    }
    .x-index::before {
      content: '';
      position: absolute; top: 0; left: calc(50% - 16px);
      width: 32px; height: 14px;
      background: color-mix(in oklch, var(--accent) 15%, #f5f0e6);
      border-radius: 0 0 4px 4px;
      border: 1px solid #d4cbb8;
      border-top: none;
    }
    .x-index-head {
      padding: 20px var(--sp-3) var(--sp);
      border-bottom: 1px solid #d4cbb8;
      flex-shrink: 0;
    }
    .x-index-head h3 {
      font-size: var(--fs); font-weight: 700;
      color: #2a2520; text-transform: uppercase;
      letter-spacing: 0.04em;
    }
    .x-index-body {
      flex: 1; padding: var(--sp) var(--sp-3);
      background: repeating-linear-gradient(0deg,
        transparent, transparent 19px,
        #e0d8c8 19px, #e0d8c8 20px
      );
    }
    .x-index-item {
      font-family: var(--mono); font-size: var(--fs-s);
      color: #3a3530; line-height: 20px;
      white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
    }
    .x-index-item::before {
      content: '› ';
      color: #8a7a68;
    }
    .x-index-num {
      position: absolute; bottom: 6px; right: 10px;
      font-family: var(--mono); font-size: 9px;
      color: #a09080;
    }

    /* --- NEW: Blueprint (list) --- */
    .x-blueprint {
      position: relative; overflow: hidden;
      background: #0c1a2e;
      border: 1px solid #1a3050;
      display: flex; flex-direction: column;
      color: #8ab4e0;
    }
    .x-blueprint::before {
      content: '';
      position: absolute; inset: 0;
      background:
        repeating-linear-gradient(0deg, transparent, transparent 19px, rgba(100,160,220,0.06) 19px, rgba(100,160,220,0.06) 20px),
        repeating-linear-gradient(90deg, transparent, transparent 19px, rgba(100,160,220,0.06) 19px, rgba(100,160,220,0.06) 20px);
      pointer-events: none;
    }
    .x-blueprint-head {
      padding: var(--sp-2) var(--sp-3);
      border-bottom: 1px solid #1a3050;
      position: relative; z-index: 1;
      flex-shrink: 0;
    }
    .x-blueprint-head h3 {
      font-family: var(--mono); font-size: var(--fs-s);
      text-transform: uppercase; letter-spacing: 0.12em;
      color: #c8e0ff;
    }
    .x-blueprint-body {
      flex: 1; padding: var(--sp) var(--sp-3);
      position: relative; z-index: 1;
    }
    .x-blueprint-item {
      font-family: var(--mono); font-size: var(--fs-s);
      line-height: 20px;
      white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
    }
    .x-blueprint-item::before {
      content: attr(data-n) '. ';
      color: #4a7aa0;
    }

    /* --- Link exploration variants (C, D, E) --- */
    .lC-intercept { position: relative; overflow: hidden; background: var(--bg); padding: 0; display: flex; flex-direction: column; color: var(--fg); clip-path: polygon(0 6px, 4% 2px, 8% 7px, 13% 3px, 18% 6px, 23% 1px, 28% 5px, 33% 2px, 38% 7px, 43% 3px, 48% 6px, 53% 1px, 58% 5px, 63% 2px, 68% 6px, 73% 3px, 78% 7px, 83% 2px, 88% 5px, 93% 1px, 97% 6px, 100% 3px, 100% 100%, calc(100% - 10px) 100%, calc(100% - 10px) calc(100% - 10px), 0 calc(100% - 10px)); border: 1px solid color-mix(in oklch, var(--link-accent) 35%, var(--border)); }
    .lC-intercept::before { content: ''; position: absolute; inset: 0; background: repeating-linear-gradient(0deg, transparent, transparent 22px, color-mix(in oklch, var(--link-accent) 6%, transparent) 22px, color-mix(in oklch, var(--link-accent) 6%, transparent) 23px); pointer-events: none; z-index: 1; }
    .lC-head { display: flex; align-items: baseline; gap: var(--sp-2); padding: 12px var(--sp-3) var(--sp); flex-shrink: 0; position: relative; z-index: 2; }
    .lC-arrow { color: var(--link-accent); font-weight: 700; }
