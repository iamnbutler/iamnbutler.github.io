---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Kuroneko from "@components/Kuroneko.astro";
import OldZed from "@components/stickers/OldZed.astro";
import Feris from "@components/stickers/Feris.astro";
import Search from "@components/Search.astro";
import { SITE } from "@consts";

type Props = {
    title: string;
    description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <Head title={`${title} | ${SITE.NAME}`} description={description} />
    </head>
    <body class="relative w-screen overflow-x-hidden">
        <Header />
        <main class="relative">
            <Feris />
            <OldZed />
            <Kuroneko />
            <slot />
        </main>
        <Footer />
        <!-- Global search interface - triggered with Cmd+P -->
        <Search />
    </body>
</html>
