---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Kuroneko from "@components/Kuroneko.astro";
import Stickers from "@components/Stickers.astro";
import { SITE } from "@consts";

type Props = {
    title: string;
    description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <Head title={`${title} | ${SITE.NAME}`} description={description} />
    </head>
    <body class="relative w-screen overflow-x-hidden">
        <Header />
        <main class="relative">
            <Stickers />
            <Kuroneko />
            <slot />
        </main>
        <Footer />
    </body>
</html>
