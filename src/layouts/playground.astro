---
import "../style.css";
import Head from "../components/head.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <Head title={title} />
    <body class="min-h-screen min-w-screen relative">
        <a href="/playground" class="fixed top-2 left-2 text-sm"
            >&larr; Back to Playground</a
        >
        <slot />
    </body>
</html>
