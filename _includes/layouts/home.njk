---
layout: layouts/base.njk
section: home
---
<section class="site-content" id="home">
  <section class="home-about">
    {{ layoutContent | safe }}
  </section>
  <section class="home-posts">
    {% set postslist = collections.post %}
    {% include "components/post-layout-list.njk" %}
  </section>
  <section class="home-work">
    <h4>Work</h4>
  </section>
  <section class="home-elsewhere">
    <h4>Elsewhere</h4>
  </section>
  <section class="home-mentions">
    <h4>Mentions</h4>
  </section>
</section>
<aside id="sidebar" class="site-sidebar">
  <ul class="sidebar-articles">
    {% for post in postslist | reverse | limit(2) %}
    <li class="list-item layout-tile full">
      <div class="post-image">
        <img src="{{ post.data.thumbnail_url }}" alt="Image Placeholder">
      </div>
      <header>
        <div>
          <div class="primary">
            <a href="{{ post.url | url }}">
                <h3>
                  {% if post.data.title %}
                    {{ post.data.title }}
                  {% else %}
                    Untitled
                  {% endif %}
                </h3>
              </a>
          </div>
          {{ post.data.summary }}
          <div class="flex-row text-caption">
            <div class="post-tag">
              {% if post.data.tags %}
                <p>
                  {% for tag in post.data.tags %}
                    {%- if tag != "post" -%}
                      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                    {%- endif -%}
                  {% endfor %}
                </p>
              {% endif %}
            </div>
            <div class="post-date date-MY">
              <time datetime="{{ post.date | machineDate }}">
                {{ post.date | readableDate }}
              </time>
            </div>
          </div>
        </div>
      </header>
    </li>
    {% endfor %}
  </ul>
</aside>
