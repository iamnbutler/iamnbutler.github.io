<div class="post-grid">

  {% for post in postslist | reverse %}

      <a href="{{ post.url | url }}" class="layout-tile">

        <div class="post-preview">
          <div class="preview-content">
            <h3 class="layout-space">
              {% if post.data.title %}
              {{ post.data.title }}
              {% else %}
              Untitled
              {% endif %}
            </h3>
            {% if post.data.subtitle %}
              <p class="layout-space subtitle">{{ post.data.subtitle }}</p>
            {% else %}
              <p class="layout-space subtitle">Add a subtitle please!</p>
            {% endif %}
            {# <p class="preview-summary layout-space-large"> {{ post.data.summary }}</p> #}
          </div>

          <div class="post-preview-meta">
            <div class="post-tag">
              <p class="text-capitalize">
                {{ post.data.primary_tag }}
              </p>
            </div>
            <div class="post-date date-MY text-uppercase">
              <time datetime="{{ post.date | machineDate }}">
                {{ post.date | mmyy }}
              </time>
            </div>
          </div>
        </div>
      </a>

  {% endfor %}
</div>