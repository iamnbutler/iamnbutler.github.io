<!-- Work List – work-list.njk -->
<section class="list">
<ul class="list">
  {% set worklist = collections.work %}
  {% for work in worklist | reverse | limit(3) %}
  <li>
      <h2 class="work-item link"><a href="{{ work.url | url }}">{{ work.data.title }}</a> – {{ work.date | yyyy }}</h2>
      <h3>{{ work.data.subtitle }}</h3>
  </li>
  {% endfor %}
  <li>
      <h2 class="work-item link"><a href="/work">More Work &rarr;</a></h2>
  </li>
</ul>
</section>