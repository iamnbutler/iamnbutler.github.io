{% set worklist = collections.work %}
<ul class="layout-list work-list">

  <li class="list-header">
    <h4>Work</h4>
  </li>

  {% for work in worklist %}
  <li class="list-item">
    <a href="{{ work.url | url }}" class="work-link">{{ work.data.title }}</a>
    <p class="work-year">{{ work.data.year }}</p>
  </li>
  {% endfor %}
  </li>
  
</ul>