<section class="list">

  {% set postslist = collections.post %}
  {% for post in postslist | reverse | limit(5) %}
  <article class="list-item">
    <header>
      <a href="{{ post.url | url }}">
        {% if post.data.title %}
        {{ post.data.title }}
        {% else %}
        Untitled
        {% endif %}
      </a>
    </header>
    <div class="context">
      <h3>{{ post.data.subtitle }}</h3>
    </div>
    <footer class="meta">
      <a href="/tags/{{ post.data.primary_tag }}/" rel="tag" class="text-capitalize">{{ post.data.primary_tag }}</a>
      <time datetime="{{ post.date | machineDate }}" class="text-uppercase">
        {{ post.date | mmyy }}
      </time>
    </footer>
  </article>
  {% endfor %}
</section>