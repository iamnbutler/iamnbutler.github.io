        <label for=q>Keyword(s):</label>
        <input type="text" name="post-search" id="post-search">
        <input type="hidden" name="ie" value="utf-8">
        <input type="hidden" name="oe" value="utf-8">
        <input type="submit" value="&rarr;">
      </form>
